<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:columnCount="2"
              android:padding="5dp"
        >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="@string/name_"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="right"
        />
    <TextView
        android:id="@+id/ucad_calendar_name_textview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="@string/date_"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="right"
        />
    <TextView
        android:id="@+id/ucad_calendar_date_textview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_marginLeft="5dp"
        />
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="@string/location_"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="right"
            />
    <TextView
            android:id="@+id/ucad_calendar_location_textview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginLeft="5dp"
            />
    <TextView
            android:id="@+id/ucad_calendar_description_textview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_rowSpan="2"/>

</GridLayout>